{
	"name": "Sonnet Scripts Dev Container",
	"dockerComposeFile": "docker-compose.yml",
	"service": "pythonbase",
	"initializeCommand": ["/bin/sh", "-c", "docker compose build linuxbase"],
	"workspaceFolder": "/workspaces/sonnet-scripts",
	"mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python"
			]
		}
	},
	"postCreateCommand": [
		"sh", "-c", "make setup && echo 'Sonnet Scripts dev container setup complete!'"
	]
}
